<web-app xmlns="http://JAVA.sun.com/xml/ns/javaee" version="2.5"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<!-- DELOYING THE DEMO SERVLET -->
	
	<context-param>
		<param-name>CGST</param-name>
		<param-value>18</param-value>
	</context-param>
	<servlet>
	
		<init-param>
		<param-name>kar</param-name>
		<param-value>13.0</param-value>
		</init-param>
	
		<init-param>
		<param-name>tn</param-name>
		<param-value>10.0</param-value>
		</init-param>
		<servlet-name>login</servlet-name>
		<servlet-class>servlet_prc_price.controller.ProductController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping> 
	
	 
</web-app>